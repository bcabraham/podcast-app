{
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true,
    "mongo": true
  },
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "max-len": "warn"
  }
}